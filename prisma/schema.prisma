generator client {
    provider = "prisma-client-js"
}

generator schematic {
    output               = "../generated"
    provider             = "node ./dist/index.js"
    stateFilePath        = "./.schematic-state.json"
    autoIndexForeignKeys = true
    // annotationPrefix     = "schematic" // Default: "schematic" (uses @schematic and @@schematic)
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

/// @schematic.index(name: "test", fields: ["email"], where: "email IS NOT NULL")
model User {
    createdAt DateTime @default(now())
    email     String   @unique
    id        Int      @id @default(autoincrement())
    name      String?
    posts     Post[]
    profile   Profile?
    updatedAt DateTime @updatedAt
}

model Profile {
    bio    String?
    id     Int     @id @default(autoincrement())
    user   User    @relation(fields: [userId], references: [id])
    userId Int     @unique
}

model Post {
    author    User     @relation(fields: [authorId], references: [id])
    authorId  Int
    content   String?
    createdAt DateTime @default(now())
    id        Int      @id @default(autoincrement())
    published Boolean  @default(false)
    title     String
    updatedAt DateTime @updatedAt
    tags      Tag[]
}

model Tag {
    id    Int    @id @default(autoincrement())
    name  String @unique
    posts Post[]
}
